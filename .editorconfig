# Top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true
# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true
# Space indentation
indent_style = space
# 4 space indentation
indent_size = 4

[*.{js,jsx,css,scss}]
# 2 space indentation
indent_size = 2
